{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "describe": true,
        "context": true,
        "before": true,
        "beforeEach": true,
        "after": true,
        "afterEach": true,
        "it": true,
        "expect": true
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules"  : {
        "space-before-function-paren": [
            "error",
            {
                "anonymous" : "always",
                "named"     : "never",
                "asyncArrow": "always"
            }
        ],
        "camelcase": "off",
        "semi": ["error", "always"],
        "object-curly-spacing": ["error", "always"],
        "array-bracket-spacing": ["error", "always"]
    }
}